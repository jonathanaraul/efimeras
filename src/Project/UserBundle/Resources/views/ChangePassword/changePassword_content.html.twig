{% trans_default_domain 'FOSUserBundle' %}

{%if form_errors(form)%}
<div class="alert alert-error">
	<button type="button" class="close" data-dismiss="alert">
		<i class="icon-remove"></i>
	</button>

	<strong>
		<i class="icon-remove"></i>
		Error
	</strong>

	{{ form_errors(form) }}
	<br>
</div>
{%endif%}
<div class="space-6"></div>

<div class="row-fluid">
	<div class="span12">

		<div >
			<div id="user-profile-3" class="user-profile row-fluid">
				<div class="offset1 span10"> <div class="space"></div>

				<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal fos_user_change_password">
				    
					<div class="tabbable">

						<ul class="nav nav-tabs padding-16">
							<li class="active">
								<a data-toggle="tab" href="#edit-basic"> <i class="green icon-group bigger-125"></i> Cambiar contrase&ntilde;a </a>
							</li>
						</ul>

				    	<div class="tab-content profile-edit-tab-content">
								<div id="edit-basic" class="tab-pane in active">

									<div class="row-fluid">

										<div class="span8">
											<div class="vspace" ></div>
											<div class="control-group" style="margin-top: 30px;">
												<label class="control-label" for="form-field-username">Contrase&ntilde;a actual:</label>
												<div class="controls">
													{{ form_widget(form.current_password) }}
												</div>
											</div>
											<div class="control-group">
												<label class="control-label" for="form-field-username">Nueva contrase&ntilde;a:</label>
												<div class="controls">
													{{ form_widget(form.plainPassword.first) }}
												</div>
											</div>
											<div class="control-group">
												<label class="control-label" for="form-field-username">Repita la contrase&ntilde;a:</label>

												<div class="controls">
													{{ form_widget(form.plainPassword.second) }}
												</div>
											</div>
											{{ form_rest(form) }}
										</div>
									</div>
								</div>
							</div>

				   	</div>
				    
				    <div class="form-actions">
						 <button class="btn btn-info" type="submit">{{ 'change_password.submit'|trans }}</button>
					</div>
				</form>
				</div><!--/span-->
			</div><!--/user-profile-->

		</div><!--/span-->
	</div><!--/row-->
</div>
<div class="hr hr32 hr-dotted"></div>
