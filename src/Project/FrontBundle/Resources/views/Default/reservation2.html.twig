{% extends "ProjectFrontBundle:Helpers:body.html.twig" %}

{%block imagenes%}
var images =  new Array();
{%for element in backgrounds%}
images[{{loop.index0}}] = "{{ asset(''~ element.getWebPath ~'') }}";
{%endfor%}
{%endblock%}

{%block contenido%}
<div class="middle-right-sub" style="float: left;padding-top: 1px;margin-left: 402px;">
	{% include 'ProjectFrontBundle:Helpers:controller-menuMobile.html.twig' %}
	<div class="news-cont2" style="margin-left: 20px;{%if page.template==0%}width: 800px;{%endif%}">
		<div class="news-cell2" style="padding: 0px;">
			<h2 style="color: {{page.theme.color}};"> Solicitud <br>({{page.name|title}})</h2>
			{%if message != ''%}
			<br>
			<p>
				{{message}}
			</p>
			<br>

			<table style ="width: 100%;" id="contenido-pagina" cellspacing="10" border="0">
				<tr>
					<td> {% trans %}Nombre{% endtrans %}: {{ aux.firstName }}</td>
				</tr>
				<tr>
					<td> {% trans %}Apellido{% endtrans %}: {{ aux.lastNname }}</td>
				</tr>
				<tr>
					<td> {% trans %}Correo Electrónico{% endtrans %}: {{ aux.email }}</td>
				</tr>
				<tr>
					<td> {% trans %}Teléfono{% endtrans %}: {{ aux.phone }}</td>
				</tr>
				<tr>
					<td> {% trans %}Nacionalidad{% endtrans %}: {{ aux.nationality }}</td>
				</tr>
				<tr>
					<td> {% trans %}Formación{% endtrans %}: {{ aux.education }}</td>
				</tr>
			</table>

			{%else%}
			<form action="{{ url }}" method="POST" {{ form_enctype(form) }} id="form-reservaciones" name="formulario">
				<table style ="width: 100%;" id="contenido-pagina" cellspacing="10" border="0">
					<tr>
						<td> {% trans %}Nombre{% endtrans %}: </td>
						<td> {{ form_widget(form.firstName, { 'attr': {'style': 'width: 100%;border: none;','class':'form-reservacion'} }) }} </td>
					</tr>
					<tr>
						<td> {% trans %}Apellido{% endtrans %}: </td>
						<td> {{ form_widget(form.lastName, { 'attr': {'style': 'width: 100%;border: none;','class':'form-reservacion'} }) }} </td>
					</tr>
					<tr>
						<td> {% trans %}Correo Electrónico{% endtrans %}: </td>
						<td> {{ form_widget(form.email, { 'attr': {'style': 'width: 100%;border: none;','class':'form-reservacion'} }) }} </td>
					</tr>
					<tr>
						<td> {% trans %}Teléfono{% endtrans %}: </td>
						<td> {{ form_widget(form.phone, { 'attr': {'style': 'width: 100%;border: none;','class':'form-reservacion'} }) }} </td>
					</tr>
					<tr>
						<td> {% trans %}Nacionalidad{% endtrans %}: </td>
						<td> {{ form_widget(form.nationality, { 'attr': {'style': 'width: 100%;border: none;'} }) }} </td>
					</tr>
					<tr>
						<td> {% trans %}Formación{% endtrans %}: </td>
						<td> {{ form_widget(form.education, { 'attr': {'style': 'width: 100%;border: none;','class':'form-reservacion'} }) }} </td>
					</tr>
					<tr>
						<td colspan="2">
							{#
							<div class="boton-listado2 boton-reservaciones" style="margin-top: 14px;margin-right: 0px; background-color:{{page.theme.color}}" >
								<!--
								<a href="javascript:document.formulario.submit();">SOLICITUD</a>
								-->
							</div>
							#}
							<input type="submit" value="SOLICITUD" class="boton-listado2 boton-reservaciones" style="margin-top: 14px;margin-right: 0px; background-color:{{page.theme.color}}">
						</td>
					</tr>
				</table>
			</form>
			{%endif%}
		</div>
	</div>
</div>
{%endblock%}