{% extends "ProjectFrontBundle:Helpers:body.html.twig" %}

{%block imagenes%}

var images =  new Array();
{%for element in backgrounds%}
images[{{loop.index0}}] = "{{ asset(''~ element.getWebPath ~'') }}";
{%endfor%}

{%endblock%}

{%block contenido%}
<div class="middle-right-sub">

	{{ render(controller('ProjectFrontBundle:Helpers:menuMobile')) }}
	{#<div class="upper-text" style="background-color: {#{theme.color} !important"></div>#}

	<div class="news-cont"  style="margin-left: 66px;">
		<hr class="barra-inferior">
		<p class="content-title">
			Resultados para {%if search==false%}Tag{%else%}el termino{%endif%}: {{tag}}
		</p>
		<div class="news-cell">
			<table cellpadding="12" id="contenido-pagina" style="width: 100%;">
				{%for element in objects%}
				<tr width="100%">
					<td  width="10%" valign="top" ><b> <a href="{{path('project_front_page',{'id': element.id, 'friendlyname' : element.friendlyName})}}"> {{element.name}} </a> </b></td>
					<td  width="70%" valign="top" > {{element.descriptionMeta}} </td>
					<td  width="20%" valign="top" > {{element.dateCreated.format('Y-m-d')}} </td>
				</tr>
				{%endfor%}
			</table>
		</div>
		<div class="lower-text"></div>
		{#<div class="lower-box" style="#right: 200px;"></div>
		#}
	</div>
	{#
	<div class="main-big-title news-big-title" style="">
		<div class="theme-sel-10">
			{{page.name|title}}
		</div>
	</div>#}
	{% include 'ProjectFrontBundle:Helpers:inferior.html.twig' %}
</div>
{%endblock%}

{%block celda%} <div class="cell-right-sub"></div>
{%endblock%} 